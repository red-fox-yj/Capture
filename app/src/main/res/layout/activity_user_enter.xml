<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/enter"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/register"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/green_button"
        android:onClick="enter"
        android:text="登录"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditText_user_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/EditText_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EditText_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/status"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/password_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EditText_password"
        android:layout_toStartOf="@+id/EditText_password"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:text="密码"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_name_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EditText_user_name"
        android:layout_toStartOf="@+id/EditText_user_name"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:text="用户名"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="248dp"
        android:background="@drawable/green_button"
        android:onClick="register"
        android:text="没有帐号？注册一个"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_above="@+id/enter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="no status"
        android:textColor="#F44336"
        android:textSize="14dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/red-fox-yj"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_above="@+id/EditText_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/redfox" />
</RelativeLayout>